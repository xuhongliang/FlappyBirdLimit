<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bird" >

 <ImageView
     android:id="@+id/button_option"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentRight="true"
     android:layout_marginBottom="14dp"
     android:layout_marginRight="20dp"
     android:contentDescription="@string/app_name"
     android:src="@drawable/menu10" />

 <ImageView
     android:id="@+id/button_help"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:layout_marginBottom="14dp"
     android:layout_marginLeft="20dp"
     android:contentDescription="@string/app_name"
     android:src="@drawable/menu20" />

 <ImageView
     android:id="@+id/button_share"
     android:layout_width="120sp"
     android:layout_height="50sp"
     android:layout_above="@+id/button_help"
     android:layout_centerHorizontal="true"
     android:contentDescription="@string/app_name"
     android:src="@drawable/sharebutton" />

 <ImageView
     android:id="@+id/button_start"
     android:layout_width="70sp"
     android:layout_height="70sp"
     android:layout_above="@+id/button_share"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="70dp"
     android:contentDescription="@string/app_name"
     android:src="@drawable/menu00" />

</RelativeLayout>
